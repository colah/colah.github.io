<script type="text/javascript">
var mnist_tooltip = new BasicVis.ImgTooltip();
mnist_tooltip.img_display.shape([28,28]);
mnist_tooltip.img_display.imgs(mnist_xs);
setTimeout(function() {mnist_tooltip.hide();}, 3000);
</script>

